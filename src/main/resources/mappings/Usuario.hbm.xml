<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ar.com.grupoesfera.piopio.modelo.Usuario" table="Usuario">
    
    	<id name="id"
			column="id"
			type="long">
		</id>
		
		<bag name="seguidos" table="Seguidos">
			<key column="seguidor"/>
			<many-to-many column="seguido" class="ar.com.grupoesfera.piopio.modelo.Usuario"/>
		</bag>
		
		<property name="nombre" type="java.lang.String" column="nombre" />
		
    </class>
</hibernate-mapping>

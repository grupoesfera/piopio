<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ar.com.grupoesfera.piopio.modelo.Pio" table="Pio">
    
    	<id name="id"
			column="id"
			type="long">
		</id>
		
		<property name="mensaje" type="java.lang.String" column="mensaje" />
		<property name="fechaCreacion" type="java.util.Date" column="fechaCreacion" />
		
		<many-to-one
			name="autor"
			column="autorId"
			lazy="false"
			class="ar.com.grupoesfera.piopio.modelo.Usuario"/>
			
		<bag name="comentarios" lazy="false">
			<key column="pioId"/>
			<one-to-many class="ar.com.grupoesfera.piopio.modelo.Comentario" />
		</bag>	
    </class>
</hibernate-mapping>
